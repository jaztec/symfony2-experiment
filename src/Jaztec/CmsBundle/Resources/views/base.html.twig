{% extends "::layout.html.twig" %}

{# Set stylesheets and javascripts #}
{% block stylesheets %}
    {% stylesheets
        '@JaztecCmsBundle/Resources/public/sass/_base.scss'
        filter="compass" 
        output='/css/base-sass-assets.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets 
        '@JaztecCmsBundle/Resources/public/css/bootstrap.css'
        '@JaztecCmsBundle/Resources/public/css/bootstrap-theme.css'
        filter='cssrewrite'
        output='/css/assets.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {# Including SASS files #}
    {% stylesheets
        '@JaztecCmsBundle/Resources/public/sass/blog.scss'
        filter="compass" 
        output='/css/sass-assets.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block javascripts %}
    {% javascripts 
        '@JaztecCmsBundle/Resources/public/js/jquery-2.1.1.js'
        '@JaztecCmsBundle/Resources/public/js/bootstrap.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{# Build the sidebar #}
{% block sidebar %}
    <nav class="navbar navbar-left" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" alt="{{ title }}" href="/"></a>
        </div>
        <div class="container-fluid">
            <div class="nav navbar-left navbar-collapse">
                <ul class="nav nav-stacked nav-pills">
                      <li><a href="/">Home</a></li>
                      <li class="divider"></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block footer %}
    
{% endblock %}